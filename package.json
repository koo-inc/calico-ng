{
  "name": "calico-ng",
  "version": "0.2.0",
  "license": "MIT",
  "main": "packages/calico/index.js",
  "angular-cli": {},
  "scripts": {
    "prebuild": "rm -rf ./packages/* && npm run postbuild",
    "build": "ngc && npm run copy-resources && npm run copy-package.json && npm run pack",
    "postbuild": "find ./src -name '*.ngfactory.ts' -delete && find ./src -name '*.ngsummary.json' -delete",
    "copy-resources": "cp -R ./src/calico/resources ./packages/calico/",
    "copy-package.json": "cp ./src/calico/package.json ./packages/calico/",
    "pack": "cd packages/calico && tar -zcvf ../calico.tar.gz ./"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/platform-server": "^4.0.0",
    "@angular/router": "^4.0.0",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "moment": "^2.18.1",
    "ng2-bootstrap": "^1.4.2",
    "rxjs": "^5.0.1",
    "sugar": "^2.0.4",
    "ts-helpers": "^1.1.1",
    "typescript": "^2.2.2",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "@angular/compiler": "^2.4.9",
    "@angular/compiler-cli": "^2.4.9",
    "@angular/platform-server": "^2.4.9",
    "@types/node": "^7.0.5",
    "typescript": "^2.2.1"
  }
}
